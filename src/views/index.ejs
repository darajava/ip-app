<script>
  function toggleEntry(ip) {
    fetch(`/toggle/${ip}`, { method: "PUT" })
      .then((res) => res.json())
      .then((res) => {
        if (res.success) {
          document
            .querySelector(`#entry-${ip.replace(/\./g, "")}`)
            .classList.toggle("transparent");
        } else {
          alert(res.error);
        }
      })
      .catch((e) => {
        alert(e);
      });
  }

  function deleteEntry(ip, message) {
    if (!confirm(`Are you sure you want to delete ${message}?`)) {
      return;
    }

    fetch(`/delete/${ip}`, { method: "DELETE" })
      .then((res) => res.json())
      .then((res) => {
        if (res.success) {
          document.querySelector(`#entry-${ip.replace(/\./g, "")}`).remove();
        } else {
          alert(res.error);
        }
      })
      .catch((e) => {
        alert(e);
      });
  }
</script>
